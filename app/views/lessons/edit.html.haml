.col-md-2.column
.col-md-8.column
  %h1 Edit Lesson
  = simple_form_for @lesson, url: course_lesson_path(@course, @lesson) do |f|
    = f.input :title, placeholder: 'Title'
    = f.input :content, placeholder: 'Add Link to Content Here'
    %button.btn.btn-default{:type => "submit"} Save Edit
  .btn.btn-danger= button_to "Delete Lesson", course_lesson_path(@course, @lesson), method: :delete, data: { confirm: "Are you sure?"}
  .btn.btn-primary= link_to "Cancel Edit", edit_course_path(@course)
.col-md-2.column
