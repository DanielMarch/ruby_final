%h1 Sign In
= simple_form_for @user, url: user_session_path, method: :post do |f|
  = f.input :email, placeholder: 'Email Address'
  = f.input :password, placeholder: 'Password'
  = f.submit "Sign In"

.col-md-4.column
.col-md-4.column
  %h1 Sign In
  = form_for @user, url: user_session_path, method: :post do |f|
    .form-group
      %label{:for => "exampleInputEmail1"} Email address
      %input#exampleInputEmail1.form-control{:type => "email"}/
    .form-group
      %label{:for => "exampleInputPassword1"} Password
      %input#exampleInputPassword1.form-control{:type => "password"}/
    %button.btn.btn-default{:type => "submit"} Sign In
.col-md-4.column
